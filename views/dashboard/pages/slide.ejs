                        <th>NAME</th>
                        <th>DESCRIPTION</th>
                        <th>ACTION</th>
                      </tr>
                      </thead>
                      <tbody>
                        <tr slides ng-repeat="slide in slides">
                          <td>{{$index+1}}</td>
                          <td>{{slide.title}}</td>
                          <td>{{slide.description}}</td>
                        <td>
