    <!-- Modal -->
    <div id="slideModal" class="modal fade" role="dialog">
        <div class="modal-dialog modal-lg">
          <!-- Modal content-->
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title"><center>{{ btnName }} Slide</center></h5>          
              <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <div class="form">
                    <form novalidate>
                        <div class="form-group">
                            <label for="title">Slide Title:</label>
                            <input type="text" class="form-control" id="title" placeholder="Enter slide" ng-model="item.title" required>
                        </div>
                      </div>
                        <div class="form-group">
                            <label for="description">Description:</label>
                            <textarea class="form-control" rows="5" id="description" placeholder="Enter decription" ng-model="item.description" ></textarea>
                        </div>
                        <div class="form-group">
                            <label for="image">Image:</label>
                            <input type="file" class="form-control" id="image">
                        </div>
                        <button type="submit" class="btn btn-primary" ng-click="saveItem()">{{ btnName }}</button>
                    </form>
                  </div>
            </div>
            <div class="modal-footer">
          
            </div>
          </div>
           <!-- End Modal content-->
        </div>
      </div>
       <!-- End  Modal --> 